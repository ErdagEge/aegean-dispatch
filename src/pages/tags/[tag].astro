---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { readingTime } from '../../utils/readingTime';

const base = (import.meta.env.BASE_URL ?? '/').replace(/\/?$/, '/');
const withBase = (path: string) => (path?.startsWith('/') ? `${base}${path.slice(1)}` : path);

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const tags = Array.from(new Set(posts.flatMap((post) => post.data.tags)));

  return tags.map((tag) => ({
    params: { tag: tag.toLowerCase() },
    props: { tag }
  }));
}

const { tag } = Astro.props;
const posts = (await getCollection('posts'))
  .map((post) => ({ ...post, readingTime: readingTime(post.body) }))
  .filter((post) => post.data.tags.map((t) => t.toLowerCase()).includes(tag.toLowerCase()))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title={`${tag} posts - Aegean Dispatch`} description={`Posts tagged with ${tag} on Aegean Dispatch.`}>
  <section class="page--narrow" style="margin: 0 auto;">
    <div style="margin-bottom: 1.2rem;">
      <h1 class="heading" style="font-size: clamp(1.8rem, 3vw, 2.2rem); margin-bottom: 0.2rem;">
        {tag} posts
      </h1>
      <p class="subheading" style="margin: 0;">
        Filtered view for <strong>{tag}</strong>. <a href={withBase('/posts')}>Back to all posts</a>
      </p>
    </div>

    {posts.length === 0 ? (
      <p class="text-muted">No posts yet for this tag.</p>
    ) : (
      <div class="post-list">
        {posts.map((post) => (
          <article class="card">
            <div class="post-meta">
              <span>{post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
              <span aria-hidden="true">â€¢</span>
              <span>{post.readingTime} min read</span>
              {post.data.tags.map((t) => (
                <a class="pill pill-link" href={withBase(`/tags/${t.toLowerCase()}/`)}>{t}</a>
              ))}
            </div>
            {post.data.cover && (
              typeof post.data.cover === 'string' ? (
                <img class="card-thumb" src={withBase(post.data.cover)} alt={post.data.coverAlt ?? ''} loading="lazy" />
              ) : (
                <Image class="card-thumb" src={post.data.cover} alt={post.data.coverAlt ?? ''} loading="lazy" />
              )
            )}
            <h3 class="post-title">
              <a class="card-link" href={withBase(`/posts/${post.slug}/`)}>{post.data.title}</a>
            </h3>
            {post.data.description && <p class="text-muted" style="margin: 0.25rem 0 0;">{post.data.description}</p>}
          </article>
        ))}
      </div>
    )}
  </section>
</BaseLayout>
